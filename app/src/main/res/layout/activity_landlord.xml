<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Details"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price" />

    <EditText
        android:id="@+id/etBedrooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bedrooms" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Property Address"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter property address" />

    <Button
        android:id="@+id/btnGetLatLng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Latitude and Longitude from Address" />

    <EditText
        android:id="@+id/etLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude"/>

    <EditText
        android:id="@+id/etLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude"/>

    <Button
        android:id="@+id/btnGetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Address from Lat and Lng" />

    <Switch
        android:id="@+id/switchAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property availability"
        android:padding="10dp"
        android:checked="true" />

    <Button
        android:id="@+id/btnSubmitListing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Listing" />

    <Button
        android:id="@+id/btnUseCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use My Current Location" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>